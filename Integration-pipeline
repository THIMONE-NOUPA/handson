pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout scmGit(
                        branches: [[name: '*/main']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'jenkins-token',
                            url: 'https://github.com/THIMONE-NOUPA/handson.git'
                        ]]
                    )
                }
            }
        }
